node {

    stage('CheckOut'){
        checkout scm
    }

    stage('Configuring Enviroment'){
        sh 'nodejs -v'
        sh 'npm -v'
        sh 'npm install --no-optional'
        sh 'npm shrinkwrap --dev'
    }

    stage('ESlint'){
        timestamps {
            sh 'gulp eslint:dev'
        }
    }

    stage('Build'){
        timestamps {
            sh 'gulp webpack:dev'
        }
    }

    stage('Testing'){
        timestamps {
            echo "Testing"
        }
    }

}